<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_200sdp"
    android:layout_margin="@dimen/_8sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/news_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:riv_corner_radius="@dimen/_8sdp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/picture"
            android:scaleType="fitXY"
            android:alpha="0.7"
            android:layout_alignParentBottom="true"/>

        <TextView
            android:id="@+id/author_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_18sdp"
            android:textColor="@color/black"
            android:text="Livemint"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/_6sdp"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginLeft="@dimen/_6sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold"
            android:text="Garena Free Fire Max redeem codes for February 7, 2024: Claim free in-game goodies | Mint - Mint"
            android:layout_above="@+id/content"
            android:layout_marginBottom="@dimen/_2sdp"/>

        <TextView
            android:id="@+id/content"
            android:layout_width="0dp"
            android:layout_height="@dimen/_45sdp"
            android:layout_above="@+id/time_date"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="@dimen/_6sdp"
            android:textColor="@color/black"
            android:text="Garena Free Fire Max is a slightly revamped version of Garena Free Fire, which gained popularity in India after the original game was banned by the central government. Apart from the intense graphicsâ€¦ [+2141 chars]"
            android:textSize="@dimen/_12sdp"/>

        <TextView
            android:id="@+id/time_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_2sdp"
            android:layout_marginRight="@dimen/_2sdp"
            android:textSize="@dimen/_12sdp"
            android:layout_alignParentEnd="true"
            android:text="2024-02-07 T0 1:24:18"
            android:layout_alignParentBottom="true"
            android:textAlignment="textEnd"
            android:textColor="@color/black"/>

</RelativeLayout>